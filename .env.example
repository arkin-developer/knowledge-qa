# ========================================
# SiliconCloud 硅基流动 API 配置 官网地址 https://cloud.siliconflow.cn/
# ========================================

SILICONCLOUD_API_KEY=your-siliconcloud-api-key-here
SILICONCLOUD_API_BASE=https://api.siliconflow.cn/v1

# ========================================
# LLM 配置
# ========================================

LLM_MODEL=Qwen/Qwen3-VL-30B-A3B-Instruct
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=256000

# ========================================
# 上下文轮数保留配置
# ========================================

MEMORY_WINDOW_SIZE=30

# ========================================
# Embedding 配置
# ========================================

# 提供商（目前仅支持 siliconcloud）
EMBEDDING_PROVIDER=siliconcloud

# Embedding 模型（推荐）:
EMBEDDING_MODEL=Qwen/Qwen3-Embedding-8B

# ========================================
# LangSmith 配置
# ========================================

LANGSMITH_API_KEY=your-langsmith-api-key-here
LANGSMITH_PROJECT=your-langsmith-project-name-here
LANGCHAIN_TRACING_V2=true
LANGCHAIN_DEBUG=false

# ========================================
# 文本分块配置（默认）
# ========================================

CHUNK_SIZE=600
CHUNK_OVERLAP=100

# ========================================
# 向量库配置（FAISS）
# ========================================

VECTOR_STORE_PATH=./data/faiss_db

# ========================================
# 搜索配置
# ========================================

SEARCH_K=3

# ========================================
# 应用配置
# ========================================

APP_ENV=development
LOG_LEVEL=INFO
